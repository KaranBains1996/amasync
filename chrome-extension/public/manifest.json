{
  "name": "Amasync",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": ["Mariana Rodriguez", "Sara Bejarano"],
  "description": "Amasync is a Chrome extension for watching streaming services like Amazon Prime remotely with friends.",
  "icons": {
    "48": "logo48.png",
    "128": "logo128.png",
    "512": "logo.png"
  },
  "page_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.primevideo.com/detail/*"],
      "css": ["/chatroom/main.812eadd5.chunk.css"],
      "js": [
        "content.js",
        "/chatroom/2.8a35aefc.chunk.js",
        "/chatroom/main.f3512aa8.chunk.js",
        "/chatroom/runtime-main.eb2b931e.js"
      ]
    }
  ],
  "permissions": ["activeTab", "declarativeContent"],
  "web_accessible_resources": ["/chatroom/main.812eadd5.chunk.css"]
}
